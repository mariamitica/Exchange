<% content_for :js_head do %>
    <script type="text/javascript">
        $(document).ready(function () {
            Exchange.init();
        });
    </script>
<% end %>
<h2>Currency converter</h2>

<div class='container-fluid'>
  <div class="row error">
    <div class='col-md-3'>
      <button type="button" class="close" data-dismiss="alert" style='margin: 2px 8px 0 0'>x</button>
      <div class="alert alert-danger">Please fill in the amount to be converted</div>
    </div>
  </div>
  <div class='row'>
    <div class="col-md-3">
      <form role="form">
        <div class="form-group">
          <%= label_tag 'original_currency', 'Original currency', :class => 'mylabel' %>
          <%= select_tag 'original_currency', options_for_select(@currencies), :id => 'original', :class => 'select form-control' %>
          <div class='form-group'>
            <%= label_tag 'amount', 'Amount', :class => 'mylabel' %>
            <%= text_field_tag 'amount', '', :class => 'input form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag 'destination_currency', 'Destination currency', :class => 'mylabel' %>
          <%= select_tag 'destination_currency', options_for_select(@currencies), :id => 'destination', :class => 'select form-control' %>
          <div class='form-group'>
            <%= label_tag 'result', 'Amount', :class => 'mylabel' %>
            <%= text_field_tag 'result', '', :class => 'input form-control', :id => '' %>
          </div>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>
